<Window x:Class="Baza.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фильтр" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Имя:"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="80,0,0,5"/>
        
        <TextBlock Text="Материал:" Grid.Row="1"/>
        <TextBox x:Name="MaterialTextBox" Grid.Row="1" Margin="80,0,0,5"/>
        
        <Button Content="Применить" Grid.Row="2" Margin="0,10,0,0" Click="ApplyButton_Click"/>
    </Grid>
</Window>
