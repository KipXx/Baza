<Window x:Class="Baza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baza"
        mc:Ignorable="d"
        Title="Управление закупками" Height="505" Width="1000">

    <Grid x:Name="Main">
        <DataGrid x:Name="DataGrid" ItemsSource="{Binding Products}" Margin="0,145,0,45" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="80"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="180"  />
                <DataGridTextColumn Header="Материал" Binding="{Binding Material}" Width="180"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Мин Количиство" Binding="{Binding MinQuantity}" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="70"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, Mode=OneWay}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Добавить в базу" Margin="10,10,0,0" Click="Button_Click" HorizontalAlignment="Left" Width="130" Height="34" VerticalAlignment="Top"/>
        <Button Content="Добавить из базы" Margin="160,10,0,0" Click="Button_Click_Load" HorizontalAlignment="Left" Width="130" Height="34" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="1000" Height="45" Background="#FF779E82">

            <Button Content="Очистить" HorizontalAlignment="Left" Margin="10,0,0,10" Width="80" Click="ClearButton_Click" Height="30" VerticalAlignment="Bottom"/>

        </Grid>

        <Button Content="Обновить данные" Margin="10,49,0,0" HorizontalAlignment="Left" Width="130" Height="34" Click="UpdateDatabase_Click" VerticalAlignment="Top"/>


        <Grid HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Width="1000" Background="#FFC1FDD3" Height="30">

            <Label Content="Материал:" Margin="200,0,0,0" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Width="80"/>
            <Label Content="Имя:" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" Margin="5,0,0,0"/>
            <ComboBox x:Name="Nfil" IsEditable="True" Text="" Margin="45,4,0,0" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" DropDownOpened="Nfil_Click"/>
            <ComboBox x:Name="Mfil" IsEditable="True" Text="" Margin="285,4,0,0" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" DropDownOpened="Mfil_Click"/>
            <Button Content="Очистить" HorizontalAlignment="Left" Margin="440,0,0,0" Width="90" Click="Button_Clear" Height="25" VerticalAlignment="Center"/>
            <Button Content="Добавить с фильтром" Margin="535,0,0,0" HorizontalAlignment="Left" Width="130" Height="25" VerticalAlignment="Center" Click="AddFil_Click"/>

        </Grid>




    </Grid>
</Window>
